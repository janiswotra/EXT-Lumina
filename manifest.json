{
  "manifest_version": 3,
  "name": "Lumina Candidate Clipper",
  "version": "1.0.0",
  "description": "One-click add to Lumina from LinkedIn.",
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://lumina-1080070879840.us-west1.run.app/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Lumina"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "assets/popup.css"
      ],
      "matches": [
        "https://*.linkedin.com/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://lumina-1080070879840.us-west1.run.app/*",
      "http://localhost:3000/*"
    ]
  }
}